#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <arpa/inet.h>

int main() {
    int sockfd, newsockfd, portno = 5000;
    char filename[100], buffer[1024];
    struct sockaddr_in serv_addr, cli_addr;
    socklen_t clilen;

    sockfd = socket(AF_INET, SOCK_STREAM, 0);
    if (sockfd < 0) {
        printf("Error opening socket\n");
        exit(1);
    }

    serv_addr.sin_family = AF_INET;
    serv_addr.sin_addr.s_addr = INADDR_ANY;
    serv_addr.sin_port = htons(portno);

    if (bind(sockfd, (struct sockaddr *) &serv_addr, sizeof(serv_addr)) < 0) {
        printf("Binding failed\n");
        exit(1);
    }

    listen(sockfd, 5);
    printf("Server running... waiting for client...\n");

    clilen = sizeof(cli_addr);
    newsockfd = accept(sockfd, (struct sockaddr *) &cli_addr, &clilen);

    if (newsockfd < 0) {
        printf("Error on accept\n");
        exit(1);
    }

    read(newsockfd, filename, sizeof(filename));
    printf("Client requested file: %s\n", filename);

    FILE *fp = fopen(filename, "r");

    if (fp == NULL) {
        strcpy(buffer, "File not found!\n");
        write(newsockfd, buffer, strlen(buffer));
    } else {
        while (fgets(buffer, sizeof(buffer), fp) != NULL) {
            write(newsockfd, buffer, strlen(buffer));
        }
        fclose(fp);
    }

    close(newsockfd);
    close(sockfd);

    return 0;
}


#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <unistd.h>
#include <arpa/inet.h>

int main() {
    int sockfd, portno = 5000;
    char filename[100], buffer[1024];
    struct sockaddr_in serv_addr;

    sockfd = socket(AF_INET, SOCK_STREAM, 0);
    if (sockfd < 0) {
        printf("Error opening socket\n");
        exit(1);
    }

    serv_addr.sin_family = AF_INET;
    serv_addr.sin_addr.s_addr = inet_addr("127.0.0.1");
    serv_addr.sin_port = htons(portno);

    if (connect(sockfd, (struct sockaddr *) &serv_addr, sizeof(serv_addr)) < 0) {
        printf("Connection failed\n");
        exit(1);
    }

    printf("Enter filename to request: ");
    scanf("%s", filename);

    write(sockfd, filename, strlen(filename) + 1);

    printf("\n--- File Contents ---\n");
    while (read(sockfd, buffer, sizeof(buffer)) > 0) {
        printf("%s", buffer);
        memset(buffer, 0, sizeof(buffer));
    }

    close(sockfd);
    return 0;
}
